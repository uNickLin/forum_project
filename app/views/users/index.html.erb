<h1 class="text-center">My profile</h1>

<hr>

<div class="profile_card">
  <div class="photo">
    <%= image_tag current_user.user_photo.url if current_user.user_photo.url %>
  </div>
  <hr>
  <table class="profile_info table table-striped"">
    <tr>
      <th>First name : </th>
      <td></td>
      <td><%= current_user.first_name %></td>
    </tr>
    <tr>
      <th>Last name : </th>
      <td></td>
      <td><%= current_user.last_name %></td>
    </tr>
    <tr>
      <th>Nick name : </th>
      <td></td>
      <td><%= current_user.nickname %></td>
    </tr>
    <tr>
      <th>Email : </th>
      <td></td>
      <td><%= current_user.email %></td>
    </tr>
  </table>
  <%= link_to 'EDIT', edit_user_registration_path, class: 'btn btn-primary' %>
  <%= link_to 'Back', topics_path, class: 'btn btn-default' %>
</div>