<% if @topic.is_collected_by(current_user) %>
  <%= link_to "", remove_collection_topic_path(@topic), method: :post, :class => "btn btn-primary fa fa-bookmark", remote: true %>
<% else %>
  <%= link_to "", add_collection_topic_path(@topic), method: :post, :class => "btn btn-default fa fa-bookmark-o", remote: true %>
<% end %>