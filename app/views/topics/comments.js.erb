
<% if params[:edit_comment_in_topic] %>
  new_message = $('textarea').val();
  $('#comment-<%= @comment.id %> p').text(new_message);
  $('textarea').val("");

<% else %>
  li = "<%=j render :partial => "comments", :locals => { :comment => @comment } %>"
  $('textarea').val("");
  // $('#comments_list').scrollTop($('#comments_list ul:first-child').offset().top);
  $('#comments_list ul').append(li);
  $('#comments_list li:last-child').css('animation', 'rubberBand 1s both');
  $('#comments_list').animate({
      scrollTop: $('#comments_list li').position().top
    });

<% end %>