<% if @topic.is_liked_by(current_user) %>
  <%= link_to "", dislike_topic_path(@topic), method: :post, :class => "btn btn-primary fa fa-thumbs-up", remote: true %>
<% else %>
  <%= link_to "", like_topic_path(@topic), method: :post, :class => "btn btn-default fa fa-thumbs-up", remote: true %>
<% end %>